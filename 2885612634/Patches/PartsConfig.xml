				    <colorType>Skin</colorType>
    			</graphicData>
			</value>
	</Operation>

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/GeneDef[defName = "Ears_Cat"]/graphicData/colorType</xpath>
